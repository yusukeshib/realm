#!/bin/bash
set -e

# ============================================================================
# realm â€” sandboxed Docker environments for git repos
# ============================================================================

DEFAULT_IMAGE="alpine/git"
DEFAULT_MOUNT="/workspace"

# Resolve symlinks to find the actual script directory
SOURCE="$0"
while [ -L "$SOURCE" ]; do
    DIR="$(cd "$(dirname "$SOURCE")" && pwd)"
    SOURCE="$(readlink "$SOURCE")"
    [[ "$SOURCE" != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$(cd "$(dirname "$SOURCE")" && pwd)"
SESSIONS_DIR="${HOME}/.realm/sessions"

usage() {
    echo "Usage:" >&2
    echo "  realm switch                                        List all sessions" >&2
    echo "  realm switch <name> [-- cmd...]                    Switch to a session" >&2
    echo "  realm switch -c <name> [options] [dir] [-- cmd...] Create and switch to a new session" >&2
    echo "  realm remove <name>                                 Delete session" >&2
    echo "  realm upgrade                                       Upgrade to latest version" >&2
    echo "" >&2
    echo "Options for 'switch -c':" >&2
    echo "  --image <image>       Docker image to use (default: $DEFAULT_IMAGE)" >&2
    echo "  --dockerfile <path>   Build image from Dockerfile (or set REALM_DOCKERFILE)" >&2
    echo "  --mount <path>        Mount path inside container (default: $DEFAULT_MOUNT)" >&2
    exit 1
}

validate_name() {
    local name="$1"
    if [[ -z "$name" ]]; then
        echo "Error: Session name is required." >&2
        exit 1
    fi
    if [[ ! "$name" =~ ^[a-zA-Z0-9_-]+$ ]]; then
        echo "Error: Invalid session name '${name}'. Use only letters, digits, hyphens, and underscores." >&2
        exit 1
    fi
}

check_docker() {
    if ! command -v docker &>/dev/null; then
        echo "Error: docker is not installed. See https://docs.docker.com/get-docker/" >&2
        exit 1
    fi
    if ! docker info &>/dev/null; then
        echo "Error: Docker daemon is not running. Please start Docker." >&2
        exit 1
    fi
}

build_custom_image() {
    local name="$1"
    local dockerfile="$2"
    local tag="realm-${name}:latest"

    if [[ ! -f "$dockerfile" ]]; then
        echo "Error: Dockerfile '${dockerfile}' not found." >&2
        exit 1
    fi

    echo "Building image from ${dockerfile}..."
    if docker build --quiet -t "$tag" -f "$dockerfile" "$(dirname "$dockerfile")"; then
        echo "$tag"
    else
        echo "Error: Docker build failed." >&2
        exit 1
    fi
}

run_container() {
    local name="$1"
    local project_dir="$2"
    local image="$3"
    local mount_path="$4"
    shift 4
    # Remaining args are the command to run

    DOCKER_ARGS=(
        --rm -it
        --entrypoint ""
        -v "${project_dir}/.git:${mount_path}/.git"
        -w "$mount_path"
    )

    # Mount ~/.gitconfig read-only if it exists
    if [[ -f "${HOME}/.gitconfig" ]]; then
        DOCKER_ARGS+=(-v "${HOME}/.gitconfig:/root/.gitconfig:ro")
    fi

    if [[ -n "${REALM_DOCKER_ARGS:-}" ]]; then
        eval EXTRA_ARGS=("${REALM_DOCKER_ARGS}")
        DOCKER_ARGS+=("${EXTRA_ARGS[@]}")
    fi

    local shell_cmd
    if [[ $# -gt 0 ]]; then
        shell_cmd="git checkout . 2>/dev/null; exec \"\$@\""
    else
        shell_cmd="git checkout . 2>/dev/null; exec sh"
    fi

    set +e
    if [[ $# -gt 0 ]]; then
        docker run "${DOCKER_ARGS[@]}" "$image" sh -c "$shell_cmd" -- "$@"
    else
        docker run "${DOCKER_ARGS[@]}" "$image" sh -c "$shell_cmd"
    fi
    DOCKER_EXIT=$?
    set -e

    # Restore host index after container exit
    git -C "$project_dir" reset --quiet 2>/dev/null || true

    return $DOCKER_EXIT
}

cmd_switch() {
    local create=false

    # Check for -c flag
    if [[ "${1:-}" == "-c" ]]; then
        create=true
        shift
    fi

    local name="${1:-}"
    if [[ -z "$name" ]]; then
        if [[ "$create" == true ]]; then
            echo "Error: Session name is required." >&2
            echo "Usage: realm switch -c <name> [options] [-- cmd...]" >&2
            exit 1
        fi
        cmd_list
        return
    fi
    shift
    validate_name "$name"

    if [[ "$create" == true ]]; then
        # --- Create new session ---

        # Parse options
        local image="$DEFAULT_IMAGE"
        local dockerfile="${REALM_DOCKERFILE:-}"
        local mount_path="$DEFAULT_MOUNT"
        local project_dir="."
        local cmd_args=()
        local past_separator=false

        while [[ $# -gt 0 ]]; do
            if [[ "$past_separator" == true ]]; then
                cmd_args+=("$1")
                shift
                continue
            fi
            case "$1" in
                --image)
                    image="$2"
                    shift 2
                    ;;
                --dockerfile)
                    dockerfile="$2"
                    shift 2
                    ;;
                --mount)
                    mount_path="$2"
                    shift 2
                    ;;
                --)
                    past_separator=true
                    shift
                    ;;
                *)
                    if [[ -d "$1" ]]; then
                        project_dir="$1"
                    else
                        cmd_args+=("$1")
                    fi
                    shift
                    ;;
            esac
        done

        if [[ -n "$dockerfile" && "$image" != "$DEFAULT_IMAGE" ]]; then
            echo "Error: --image and --dockerfile are mutually exclusive." >&2
            exit 1
        fi

        PROJECT_DIR="$(cd "$project_dir" && pwd)"

        if [[ ! -d "${PROJECT_DIR}/.git" ]]; then
            echo "Error: '${PROJECT_DIR}' is not a git repository." >&2
            exit 1
        fi

        local session_dir="${SESSIONS_DIR}/${name}"
        if [[ -d "$session_dir" ]]; then
            echo "Error: Session '${name}' already exists. Remove it first: realm remove ${name}" >&2
            exit 1
        fi

        check_docker

        # Build custom image if Dockerfile provided
        if [[ -n "$dockerfile" ]]; then
            dockerfile="$(cd "$(dirname "$dockerfile")" && pwd)/$(basename "$dockerfile")"
            image="$(build_custom_image "$name" "$dockerfile")"
        fi

        # Create branch at current HEAD
        local branch="realm/${name}"
        git -C "$PROJECT_DIR" branch "$branch" HEAD

        # Save session metadata
        mkdir -p "$session_dir"
        echo "$PROJECT_DIR" > "${session_dir}/project_dir"
        echo "$image" > "${session_dir}/image"
        echo "$mount_path" > "${session_dir}/mount_path"
        date -u '+%Y-%m-%d %H:%M:%S UTC' > "${session_dir}/created_at"
        if [[ -n "$dockerfile" ]]; then
            echo "$dockerfile" > "${session_dir}/dockerfile"
        fi
        if [[ ${#cmd_args[@]} -gt 0 ]]; then
            printf '%s\n' "${cmd_args[@]}" > "${session_dir}/command"
        fi

        run_container "$name" "$PROJECT_DIR" "$image" "$mount_path" "${cmd_args[@]}"
        exit $?
    else
        # --- Resume existing session ---

        local session_dir="${SESSIONS_DIR}/${name}"
        if [[ ! -d "$session_dir" ]]; then
            echo "Error: Session '${name}' not found." >&2
            exit 1
        fi

        # Read session metadata
        local project_dir image mount_path

        if [[ ! -f "${session_dir}/project_dir" ]]; then
            echo "Error: Session '${name}' is missing project directory metadata." >&2
            exit 1
        fi
        project_dir="$(cat "${session_dir}/project_dir")"

        if [[ ! -d "$project_dir" ]]; then
            echo "Error: Project directory '${project_dir}' no longer exists." >&2
            exit 1
        fi

        image="$(cat "${session_dir}/image" 2>/dev/null || echo "$DEFAULT_IMAGE")"
        mount_path="$(cat "${session_dir}/mount_path" 2>/dev/null || echo "$DEFAULT_MOUNT")"

        # Parse command args (override with -- args if provided)
        local cmd_args=()
        local past_separator=false

        while [[ $# -gt 0 ]]; do
            if [[ "$past_separator" == true ]]; then
                cmd_args+=("$1")
                shift
                continue
            fi
            case "$1" in
                --)
                    past_separator=true
                    shift
                    ;;
                *)
                    cmd_args+=("$1")
                    shift
                    ;;
            esac
        done

        # Fall back to saved command if no args provided
        if [[ ${#cmd_args[@]} -eq 0 && -f "${session_dir}/command" ]]; then
            mapfile -t cmd_args < "${session_dir}/command"
        fi

        check_docker

        # Rebuild custom image if session used --dockerfile
        if [[ -f "${session_dir}/dockerfile" ]]; then
            local dockerfile
            dockerfile="$(cat "${session_dir}/dockerfile")"
            if [[ -f "$dockerfile" ]]; then
                image="$(build_custom_image "$name" "$dockerfile")"
            fi
        fi

        # Verify branch exists
        local branch="realm/${name}"
        if ! git -C "$project_dir" rev-parse --verify "$branch" &>/dev/null; then
            echo "Error: Branch '${branch}' not found. Session may be corrupted." >&2
            exit 1
        fi

        echo "Resuming session '${name}'..."
        date -u '+%Y-%m-%d %H:%M:%S UTC' > "${session_dir}/resumed_at"

        run_container "$name" "$project_dir" "$image" "$mount_path" "${cmd_args[@]}"
        exit $?
    fi
}

cmd_list() {
    if [[ ! -d "$SESSIONS_DIR" ]] || [[ -z "$(ls -A "$SESSIONS_DIR" 2>/dev/null)" ]]; then
        echo "No sessions found."
        exit 0
    fi

    printf "%-20s %-30s %-20s %s\n" "NAME" "PROJECT" "IMAGE" "CREATED"
    printf "%-20s %-30s %-20s %s\n" "----" "-------" "-----" "-------"

    for session_dir in "${SESSIONS_DIR}"/*/; do
        [[ -d "$session_dir" ]] || continue
        local name project_dir image created_at
        name="$(basename "$session_dir")"
        project_dir=""
        image=""
        created_at=""

        if [[ -f "${session_dir}/project_dir" ]]; then
            project_dir="$(cat "${session_dir}/project_dir")"
        fi
        if [[ -f "${session_dir}/image" ]]; then
            image="$(cat "${session_dir}/image")"
        fi
        if [[ -f "${session_dir}/created_at" ]]; then
            created_at="$(cat "${session_dir}/created_at")"
        fi

        printf "%-20s %-30s %-20s %s\n" "$name" "$project_dir" "$image" "$created_at"
    done
}

cmd_remove() {
    local name="$1"
    validate_name "$name"

    local session_dir="${SESSIONS_DIR}/${name}"
    if [[ ! -d "$session_dir" ]]; then
        echo "Error: Session '${name}' not found." >&2
        exit 1
    fi

    # Delete the realm branch if it exists
    if [[ -f "${session_dir}/project_dir" ]]; then
        local project_dir
        project_dir="$(cat "${session_dir}/project_dir")"
        local branch="realm/${name}"
        if [[ -d "$project_dir" ]] && git -C "$project_dir" rev-parse --verify "$branch" &>/dev/null; then
            git -C "$project_dir" branch -D "$branch" 2>/dev/null || true
        fi
    fi

    rm -rf "$session_dir"
    echo "Session '${name}' removed."
}

cmd_upgrade() {
    local base_url="https://raw.githubusercontent.com/yusukeshib/realm/main"
    local tmpfile
    tmpfile="$(mktemp)"

    echo "Downloading latest version..."
    if ! curl -fsSL "${base_url}/realm" -o "$tmpfile"; then
        echo "Error: Failed to download latest version." >&2
        rm -f "$tmpfile"
        exit 1
    fi

    if ! bash -n "$tmpfile" 2>/dev/null; then
        echo "Error: Downloaded file is not valid." >&2
        rm -f "$tmpfile"
        exit 1
    fi

    local actual_script="$0"
    while [[ -L "$actual_script" ]]; do
        local target
        target="$(readlink "$actual_script")"
        if [[ "$target" == /* ]]; then
            actual_script="$target"
        else
            actual_script="$(cd "$(dirname "$actual_script")" && pwd)/$(basename "$target")"
        fi
    done

    if mv "$tmpfile" "$actual_script"; then
        chmod +x "$actual_script"
        echo "Successfully upgraded to latest version!"
    else
        echo "Error: Failed to replace script. You may need to run with sudo." >&2
        rm -f "$tmpfile"
        exit 1
    fi
}

# Subcommand dispatch
case "${1:-}" in
    switch)
        shift
        cmd_switch "$@"
        ;;
    remove)
        shift
        if [[ $# -lt 1 ]]; then
            echo "Error: Session name is required." >&2
            echo "Usage: realm remove <name>" >&2
            exit 1
        fi
        cmd_remove "$1"
        ;;
    upgrade)
        cmd_upgrade
        ;;
    *)
        usage
        ;;
esac
